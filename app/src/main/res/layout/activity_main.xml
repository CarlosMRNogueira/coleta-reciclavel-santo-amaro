<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="24dp"
    android:gravity="center" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Coleta Reciclável Santo Amaro"
        android:textStyle="bold" android:textSize="20sp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnConsulta"
        android:text="Consultar datas"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnAgendar"
        android:text="Agendar lembretes (1 dia antes)"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnCancelar"
        android:text="Cancelar lembretes"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TextView
        android:text="Versão 1.0 (Dev. Carlos Nogueira)"
        android:textSize="12sp"
        android:textColor="#888888"
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>


</LinearLayout>